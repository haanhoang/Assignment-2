{
  "config": {
    "view": {
      "stroke": null
    },
    "background": "transparent"
  },
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 350,
  "data": {
    "url": "https://raw.githubusercontent.com/haanhoang/Assignment-2/main/Data/data_line_chart_gambling_type.csv"
  },
  "params": [
    {
      "name": "type_highlight",
      "select": {
        "type": "point",
        "fields": [
          "Type"
        ]
      },
      "bind": "legend"
    }
  ],
  "transform": [
    {
      "calculate": "if(datum.Type === 'Machines', 0, if(datum.Type === 'Wagering', 1, if(datum.Type === 'Casino', 3, if(datum.Type === 'Lotteries', 4, if(datum.Type === 'Keno', 5, 6)))))",
      "as": "typeOrder"
    }
  ],
  "mark": "area",
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "axis": {
          "domain": false,
          "grid": false,
          "ticks": false
      }
    },
    "y": {
      "aggregate": "sum",
      "field": "Expenditure",
      "type": "quantitative",
      "title":"Expenditure (in Million $AUD)",
      "axis": {
          "domain": false,
          "grid": false,
          "ticks": false
      }
    },
    "color": {
      "field": "Type", "scale":{"scheme":"turbo"}
    },
    "order": {
      "field": "typeOrder"
    },
    "opacity": {
      "condition": {
        "param": "type_highlight",
        "value": 1
      },
      "value": 0.2
    }, "tooltip":[{"field": "Type", "title":"Gambling Type"}, {"field":"Expenditure", "title":"Expenditure (in Million $AUD)", "format":".2f"}]
  }
}