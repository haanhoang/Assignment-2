{
    "config": {
        "view": {
            "stroke": null
        },
        "background": "transparent"
    },
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 350,
    "title": {"text": "Top Gambling Expenditure by Country in 2017.", "align": "center"},
    "data": {
        "url": "https://raw.githubusercontent.com/haanhoang/Assignment-2/main/Data/data_bar_chart_rank.csv"
    },
    "layer": [
        {
            "mark": "bar",
            "transform": [{"calculate": "'The average person lost $' + datum['Expenditure'] + ' USD to gambling in ' + datum['Country'] + ' in 2017.'",
            "as": "tool"}],
            "encoding": {
                "y": {
                    "field": "Country",
                    "type": "nominal",
                    "sort": "-x",
                    "title": null,
                    "axis": {
                        "domain": false,
                        "grid": false,
                        "ticks": false
                    }
                },
                "x": {
                    "field": "Expenditure",
                    "type": "quantitative",
                    "title": "Expenditure per capita (in $USD)",
                    "axis": {
                        "domain": false,
                        "grid": false,
                        "ticks": false
                    }
                }, "color": {"value": "#6cb964"}, "tooltip": [{"field":"tool"}]
            }
        }
    ]
}