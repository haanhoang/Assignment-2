{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 350,
  "title": {"text":"Amount lost by gamblers in each LGA.", "align": "center"},
  "data": {
    "url": "https://raw.githubusercontent.com/haanhoang/Assignment-2/main/Data/data_map_and_bump.csv"
  },
  "params": [
    {
      "name": "region_selector",
      "bind": {
        "input": "select",
        "options": [null, "Metro", "Country"],
        "labels": ["Show All", "Metro", "Country"], "name": "Select LGA type: "
      }
    }, {
      "name": "year_filter",
      "value": 2017,
      "bind": {
          "input": "range",
          "min": 2017,
          "max": 2022,
          "step": 1,
          "name": "Year: "
      }
    }
  ],
  "transform": [
    {"filter": "region_selector == null || datum.Region == region_selector"}, {"filter": "datum.Year == year_filter"}
  ], 
  "encoding": {
    "x": {
      "field": "NumberOfMachinePer1000Adults",
      "type": "quantitative",
      "title": "Number of gaming machines per 1000 adults"
    },
    "y": {"field": "AdultsPerVenue", "type": "quantitative"}
  },
  "layer": [
    {
      "params": [
        {
          "name": "region_highlight",
          "select": {"type": "point", "fields": ["Region"]},
          "bind": "legend"
        }
      ],
      "mark": "circle",
      "encoding": {
        "size": {"field": "ExpenditurePerAdult", "type": "quantitative", "scale":{"domain":[100, 1000]}},
        "color": {"field": "Region", "type": "nominal", "scale":{"domain": ["Metro", "Country"], "range":["#2e78a6", "#f2ab27"]}},
        "opacity": {
          "condition": {"param": "region_highlight", "value": 1},
          "value": 0.2
        },
        "tooltip": [
          {"field": "LGA", "type": "nominal", "title": "LGA Name"},
          {
            "field": "ExpenditurePerAdult",
            "type": "quantitative",
            "title": "$ Gambled per Adult",
            "format": ".2f"
          },
          {
            "field": "NumberOfMachinePer1000Adults",
            "type": "quantitative",
            "title": "Number of machine per 1000 adults",
            "format": ".2f"
          },
          {
            "field": "AdultsPerVenue",
            "type": "quantitative",
            "title": "Adults per venue",
            "format": ".2f"
          },
          {
              "field": "Year",
              "type": "quantitative",
              "title": "Year"
            }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "LGA", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['LGA'] == 'Whitehorse'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "LGA", "type": "nominal", "title": "LGA Name"},
          {
            "field": "ExpenditurePerAdult",
            "type": "quantitative",
            "title": "$ Gambled per Adult",
            "format": ".2f"
          },
          {
            "field": "NumberOfMachinePer1000Adults",
            "type": "quantitative",
            "title": "Number of machine per 1000 adults",
            "format": ".2f"
          },
          {
            "field": "AdultsPerVenue",
            "type": "quantitative",
            "title": "Adults per venue",
            "format": ".2f"
          },
          {
              "field": "Year",
              "type": "quantitative",
              "title": "Year"
            }
        ]
      }
    }
  ]
}